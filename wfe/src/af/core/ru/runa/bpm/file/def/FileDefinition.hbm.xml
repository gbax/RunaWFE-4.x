<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false" default-access="field" >

  <subclass name="ru.runa.bpm.file.def.FileDefinition" 
            extends="ru.runa.bpm.module.def.ModuleDefinition" 
            discriminator-value="F">
  
      <map
            name="processFiles" 
            table="JBPM_PROCESSFILES"
            batch-size="10" 
            cascade="all" >
         <key column="DEFINITION_ID_" foreign-key="fk_definition_id_n" not-null="true" />
         <map-key column="NAME_" type="string"></map-key>
         <element column="BYTES_" type="org.hibernate.type.PrimitiveByteArrayBlobType"></element>
      </map>

  </subclass>

</hibernate-mapping>
