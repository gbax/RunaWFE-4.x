<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false" default-access="field" >

  <class name="ru.runa.bpm.module.exe.ModuleInstance" 
         table="JBPM_MODULEINSTANCE"
         abstract="true" 
         discriminator-value="M">
    <cache usage="read-write" />
    <id name="id" column="ID_">
	   	<generator class="native">
	        <param name="sequence">SEQ_JBPM_MODULEINSTANCE</param>
	    </generator>
    </id>
    <discriminator type="char" column="CLASS_"/>
    <version name="version" column="VERSION_" />

    <!-- M : ru.runa.bpm.module.exe.ModuleInstance -->
    <!-- C : ru.runa.bpm.context.exe.ContextInstance -->
    <!-- L : ru.runa.bpm.logging.exe.LoggingInstance -->
    <!-- I : ru.runa.bpm.scheduler.exe.SchedulerInstance -->
    <!-- T : ru.runa.bpm.taskmgmt.def.TaskMgmtDefinition -->
    
    <many-to-one name="processInstance" 
                 column="PROCESSINSTANCE_"
                 foreign-key="FK_MODINST_PRCINST"
                 index="IDX_MODINST_PRINST"/>
    
  </class>

</hibernate-mapping>
