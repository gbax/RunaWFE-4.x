<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false" default-access="field" >
  <class name="ru.runa.bpm.graph.def.Node" 
         table="JBPM_NODE"
         discriminator-value="N">
    <cache usage="read-write" />
    <id name="id" column="ID_">
	   	<generator class="native">
	        <param name="sequence">SEQ_JBPM_NODE</param>
	    </generator>
    </id>
    <discriminator type="char" column="CLASS_"/>
    <!-- KEEP THIS IN SYNC WITH Event.hbm.xml !!! -->
    <!-- NOTE that the characters may not overlap with other GraphElement identifiers -->
    <!-- C : ru.runa.bpm.graph.node.ProcessState -->
    <!-- D : ru.runa.bpm.graph.node.Decision -->
    <!-- E : ru.runa.bpm.graph.node.EndState -->
    <!-- F : ru.runa.bpm.graph.node.Fork -->
    <!-- J : ru.runa.bpm.graph.node.Join -->
    <!-- K : ru.runa.bpm.graph.node.TaskNode -->
    <!-- N : ru.runa.bpm.graph.def.Node -->
    <!-- R : ru.runa.bpm.graph.node.StartState -->
    <!-- S : ru.runa.bpm.graph.node.State -->
    <!-- U : ru.runa.bpm.graph.def.SuperState -->
    <!-- W : ru.runa.bpm.graph.node.MultiInstanceState -->
    <!-- X : ru.runa.bpm.graph.node.SendMessage -->
    <!-- Y : ru.runa.bpm.graph.node.ReceiveMessage -->

    <!-- GRAPHELEMENT -->
    <property name="name" column="NAME_"/>
    <property name="description" column="DESCRIPTION_" type="text"/>
    <many-to-one name="processDefinition" 
                 column="PROCESSDEFINITION_" 
                 foreign-key="FK_NODE_PROCDEF"
                 index="IDX_NODE_PROCDEF"/>
    <map name="events" cascade="all">
    	<cache usage="read-write"/>
      <key column="NODE_" foreign-key="FK_EVENT_NODE" />
      <index column="EVENTTYPE_" type="string"/>
      <one-to-many class="ru.runa.bpm.graph.def.Event" />
    </map>
    
    <property name="isAsync" column="ISASYNC_"/>
    <property name="isAsyncExclusive" column="ISASYNCEXCL_"/>

    <many-to-one name="action"
                 column="ACTION_" 
                 cascade="all" 
                 foreign-key="FK_NODE_ACTION"
                 index="IDX_NODE_ACTION" />
    <many-to-one name="superState" 
                 column="SUPERSTATE_"
                 foreign-key="FK_NODE_SUPERSTATE"
                 index="IDX_NODE_SUPRSTATE"/>
    
    <list name="leavingTransitions" cascade="all">
    	<cache usage="read-write"/>
      <key column="FROM_" />
      <list-index column="FROMINDEX_" />
      <one-to-many class="ru.runa.bpm.graph.def.Transition" />
    </list>
    <set name="arrivingTransitions">
      <key column="TO_" />
      <one-to-many class="ru.runa.bpm.graph.def.Transition" />
    </set>

  </class>
</hibernate-mapping>
