<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app
  PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN"
  "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">

<web-app>
	<display-name>FCKeditor GPD Application</display-name>
  
	<servlet>
		<servlet-name>FileSystemConnectorServlet</servlet-name>
		<servlet-class>tk.eclipse.plugin.wysiwyg.ConnectorServlet</servlet-class>
		<init-param>
			<param-name>debug</param-name>
			<param-value>true</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>VarTagSupportServlet</servlet-name>
		<servlet-class>tk.eclipse.plugin.wysiwyg.VarTagSupportServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>

	<servlet>
		<servlet-name>FtlTagSupportServlet</servlet-name>
		<servlet-class>tk.eclipse.plugin.wysiwyg.FtlTagSupportServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>


	<servlet-mapping>
		<servlet-name>FileSystemConnectorServlet</servlet-name>
		<url-pattern>/editor/filemanager/connectors/java/connector.java</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>FileSystemConnectorServlet</servlet-name>
		<url-pattern>/editor/filemanager/connectors/java/upload.java</url-pattern>
	</servlet-mapping>  

	<servlet-mapping>
		<servlet-name>VarTagSupportServlet</servlet-name>
		<url-pattern>/editor/RunaVarTags.java</url-pattern>
	</servlet-mapping>

	<servlet-mapping>
		<servlet-name>FtlTagSupportServlet</servlet-name>
		<url-pattern>/editor/FreemarkerTags.java</url-pattern>
	</servlet-mapping>

    <welcome-file-list>
        <welcome-file>fckeditor.html</welcome-file>
    </welcome-file-list>

</web-app>