<?xml version="1.0" encoding="UTF-8" ?>

<project basedir="." name="Runa WFE specific targets for ALTLinux">

	<property name="jboss.timeout" value="60"/>
	<property name="shortcut.categories" value="Categories=Runa WFE"/>

        <property name="rpm.build.root" value="/home/al/RPM"/>
	<property name="jboss.system.root" value="/usr/share/runawfe-jboss"/>

        <property name="release.id" value="alt1.svn${svn.rev}"/>
        <property name="web.port" value="8080"/>   
        <property name="url.handler" value="/usr/bin/url_handler.sh"/>   
        <property name="doc.open" value="xdg-open"/>   
        <property name="rpm.doc.dir" value="docs/guides/ru"/>   
        
        <property name="skip.webservices" value=""/>
	<import file="Linux.common.targets.xml"/>
	
	<target name="add.changelog">
		<exec executable="sh" failonerror="true">		
			<arg line="add_changelog ${spec.file} -e '- New release'"/>
		</exec>
	</target>
</project>
