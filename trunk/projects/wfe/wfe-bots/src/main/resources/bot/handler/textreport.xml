<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://runa.ru/xml" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://runa.ru/xml textreport.xsd">
	<template fileName="/test_adv.xml" fileEncoding="UTF8" />

	<report fileName="report.xml" fileEncoding="UTF8" variableName="resultTextReport" contentType="application/ms-word" />

	<replacements xmlFormat="true" applyToRegexp="false" />

	<formatters>
		<variable variableName="testDate" formatClass="java.text.SimpleDateFormat" pattern="dd-MM-yy" />
		<variable variableName="testDouble" formatClass="java.text.DecimalFormat" />
	</formatters>
</config>