<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin
	id="ru.runa.gpd.form.quick"
	name="Quick Form Editor Plug-In"
    version="4.0"
    provider-name="Runa"
    class="ru.runa.gpd.quick.Activator">
   <runtime>
      <library name="lib/freemarker.patched-2.3.11.jar">
         <export
               name="*">
         </export>
      </library>
      <library name="."/>
   </runtime>
   <requires>
      <import plugin="org.eclipse.ui"/>
      <import plugin="ru.runa.gpd"/>
      <import plugin="org.eclipse.core.resources"/>
      <import plugin="org.eclipse.core.runtime"/>
      <import plugin="org.eclipse.ui.ide"/>
      <import plugin="ru.runa.gpd.form.ftl"/>
      <import plugin="org.eclipse.ui.forms"/>
   </requires>
    	<extension-point id="templates" name="Quick templates" schema="schema/templates.exsd"/>
   
   	<extension
         point="org.eclipse.ui.editors">
      <editor
            class="ru.runa.gpd.quick.formeditor.QuickFormEditor"
            default="false"
            id="ru.runa.gpd.quick.formeditor.QuickFormEditor"
            name="quickFormEditor">
      </editor>
   	</extension>
   	<extension
         point="ru.runa.gpd.formtype">
      <element
            contributor="ru.runa.gpd.quick.formeditor.QuickFormType"
            name="%FormType.quick"
            type="quick"/>
   	</extension>
   	<extension
         point="ru.runa.gpd.form.quick.templates">
      <template
            enabled="true"
            filename="table2ColumnsLayout.ftl.template"
            label="%template.table2ColumnsLayout"
            name="table2ColumnsLayout">
            <parameter name="Title" label="%parameter.title"/>
      </template>
      <template
            enabled="true"
            filename="divContainerLayout.ftl.template"
            label="div container layout (for demo processes)"
            name="divContainerLayout">
      </template>
   	</extension>
</plugin>
