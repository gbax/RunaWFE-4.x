<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE properties SYSTEM "http://java.sun.com/dtd/properties.dtd">
<properties>
  <comment>
    Runa-side sql templates
  </comment>

  <entry key="updateRefColumn">
    update {0} set {1} = (select {2} from {3} offset 0 limit 1)
  </entry>

  <entry key="updateNonRefColumn">
    update {0} set {1} = {2}
  </entry>

  <entry key="isNullWhereClause">
    where {0} is null
  </entry>

</properties>