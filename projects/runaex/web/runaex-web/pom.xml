  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <version>2.3</version>
        <configuration>
          <archive>
            <manifestEntries>
              <Dependencies>org.slf4j,org.postgresql</Dependencies>
            </manifestEntries>
          </archive>
          <webResources>
            <resource>
              <directory>src/main/webapp</directory>
              <filtering>true</filtering>
            </resource>
          </webResources>
          <webXml>src/main/webapp/WEB-INF/web.xml</webXml>
          <warSourceExcludes>resources/stylesheets/*.css, resources/javascripts/*.js</warSourceExcludes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>net.alchim31.maven</groupId>
        <artifactId>yuicompressor-maven-plugin</artifactId>
        <version>1.3.0</version>
        <executions>
          <execution>
            <goals>
              <goal>compress</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <force>true</force>
          <jswarn>false</jswarn>
          <nosuffix>true</nosuffix>
          <aggregations>
            <aggregation>
              <removeIncluded>true</removeIncluded>
              <insertNewLine>true</insertNewLine>
              <output>
                ${project.build.directory}/${project.build.finalName}/resources/javascripts/all-${project.version}.js
              </output>

              <includes>
                <include>jquery-1.8.0.min.js</include>
                <!--<include>ext-all.js</include>-->
                <include>jquery.timers.js</include>
                <include>jquery-ui-1.8.23.custom.js</include>
                <include>bootstrap.min.js</include>
                <include>AjaxErrorHandler.js</include>
                <include>bootstrap-alert.js</include>
                <include>jquery.blockUI.js</include>
                <include>main.js</include>
                <include>jquery.mask.js</include>
                <include>jquery.maskMoney.js</include>
                <include>jquery-bootstrap-table.js</include>
                <include>jquery.ba-resize.min.js</include>
              </includes>
            </aggregation>
            <aggregation>
              <removeIncluded>true</removeIncluded>
              <insertNewLine>true</insertNewLine>
              <output>
                ${project.build.directory}/${project.build.finalName}/resources/stylesheets/all-${project.version}.css
              </output>
              <includes>
                <include>bootstrap.css</include>
                <!--<include>ext-all.css</include>-->
                <include>bootstrap-responsive.css</include>
                <include>main.css</include>
              </includes>
            </aggregation>
          </aggregations>
        </configuration>
      </plugin>
    </plugins>

    <resources>
      <resource>
        <directory>src/main/resources</directory>
      </resource>
      <resource>
        <directory>${project.basedir}/../../gpd_plugins/components_plugin/OSGI-INF/l10n</directory>
      </resource>
    </resources>

    <finalName>web-bpm</finalName>
  </build>

