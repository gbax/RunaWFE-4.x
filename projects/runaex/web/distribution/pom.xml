<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>web</artifactId>
    <groupId>runaex</groupId>
    <version>1.27.2</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <groupId>runaex</groupId>
  <artifactId>distribution</artifactId>
  <packaging>ear</packaging>

  <dependencies>
    <dependency>
      <groupId>ru.runa.wfe</groupId>
      <artifactId>wfe-ear</artifactId>
      <type>ear</type>
    </dependency>
    <dependency>
      <groupId>runaex</groupId>
      <artifactId>web-bpm</artifactId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>runaex.runa-ext</groupId>
      <artifactId>handler-bundle</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>

  <properties>
    <assemble-dir>${project.build.directory}/web-bpm-distribution</assemble-dir>
  </properties>

  <build>
    <finalName>runawfe</finalName>

    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <version>2.6</version>
        <executions>
          <execution>
            <id>unpack</id>
            <phase>initialize</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>ru.runa.wfe</groupId>
                  <artifactId>wfe-ear</artifactId>
                  <type>ear</type>
                  <overWrite>true</overWrite>
                  <outputDirectory>${assemble-dir}</outputDirectory>
                </artifactItem>
              </artifactItems>
            </configuration>
          </execution>

          <execution>
            <id>install-handlers</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>runaex.runa-ext</groupId>
                  <artifactId>handler-bundle</artifactId>
                </artifactItem>
              </artifactItems>
              <outputDirectory>${assemble-dir}/lib</outputDirectory>
              <stripVersion>true</stripVersion>
            </configuration>
          </execution>

          <execution>
            <id>install-war</id>
            <phase>process-resources</phase>
            <goals>
              <goal>copy</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>runaex</groupId>
                  <artifactId>web-bpm</artifactId>
                  <type>war</type>
                </artifactItem>
              </artifactItems>
              <outputDirectory>${assemble-dir}</outputDirectory>
              <stripVersion>true</stripVersion>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <artifactId>maven-resources-plugin</artifactId>
        <version>2.4.3</version>
        <executions>
          <execution>
            <id>copy-application.xml</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${assemble-dir}/META-INF</outputDirectory>
              <resources>
                <resource>
                  <directory>src/main/application</directory>
                  <filtering>true</filtering>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>com.google.code.maven-config-processor-plugin</groupId>
        <artifactId>config-processor-maven-plugin</artifactId>
        <version>2.5</version>
        <configuration>
          <encoding>${project.build.sourceEncoding}</encoding>
          <outputDirectory>${assemble-dir}/META-INF</outputDirectory>
          <useOutputDirectory>true</useOutputDirectory>
          <failOnMissingXpath>true</failOnMissingXpath>

          <transformations>
            <transformation>
              <type>xml</type>
              <input>${assemble-dir}/META-INF/application.xml</input>
              <output>application.xml</output>
              <rules>
                <add>
                  <after>//*[starts-with(name(), 'application')]/*[starts-with(name(), 'module')][last()]</after>
                  <value>
                    <![CDATA[
                    <module>
                      <web>
                        <web-uri>web-bpm.war</web-uri>
                        <context-root>/web-bpm</context-root>
                      </web>
                    </module>
                    ]]>
                  </value>
                </add>
              </rules>
            </transformation>
          </transformations>
        </configuration>
        <executions>
          <execution>
            <phase>process-resources</phase>
            <goals>
              <goal>process</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.4</version>
        <configuration>
          <appendAssemblyId>false</appendAssemblyId>
          <archiverConfig>
            <appxml>${assemble-dir}/META-INF/application.xml</appxml>
          </archiverConfig>
          <descriptors>
            <descriptor>
              assemble-descriptor.xml
            </descriptor>
          </descriptors>
        </configuration>
        <executions>
          <execution>
            <id>make-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>