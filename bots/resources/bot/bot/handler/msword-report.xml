<?xml version="1.0" encoding="UTF-8"?>
<msword-report-task xmlns="http://runa.ru/xml" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://runa.ru/xml msword-report-task.xsd">
	<!-- 
		Bookmarks in sample-template.doc will be replaced by formated values of process variables.
		Sample-templated will be saved as report.doc  and assigned to process variable resultWord.
	-->
	<report template-path="/bot/sample-template.doc" output-variable="resultWord" output-variable-file-name="report.doc">
		<mapping bookmark="dateInDateFormat" variable="date" format-class="ru.runa.wf.web.forms.format.DateFormat" />
		<mapping bookmark="dateInTimeFormat" variable="date" format-class="ru.runa.wf.web.forms.format.TimeFormat" />
		<mapping bookmark="double" variable="double" format-class="ru.runa.bpm.web.formgen.format.DoubleFormat" />
		<!-- If format-class is omitted toString method is called on variable value. -->
		<mapping bookmark="string" variable="string" />
	</report>
</msword-report-task>
