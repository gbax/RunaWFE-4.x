<plugin>
   <extension
         point="ru.runa.gpd.handlers">
      <handler
            actionHandler="true"
            assignmentHandler="false"
            botTaskHandler="true"
            decisionHandler="false"
            cellEditorProvider="ru.runa.gpd.extension.handler.ConfigBasedProvider"
            className="ru.runa.bp.AlfSetContent"
            label="Alfresco: upload file data"
            enabled="true">
      </handler>
      <handler
            actionHandler="true"
            assignmentHandler="false"
            botTaskHandler="true"
            decisionHandler="false"
            cellEditorProvider="ru.runa.gpd.extension.handler.ConfigBasedProvider"
            className="ru.runa.bp.demo.ApproveMyDoc"
            label="alfdemo: approve document"
            enabled="true">
      </handler>
      <handler
            actionHandler="true"
            assignmentHandler="false"
            botTaskHandler="true"
            decisionHandler="false"
            cellEditorProvider="ru.runa.gpd.extension.handler.ConfigBasedProvider"
            className="ru.runa.bp.demo.CreateMyDoc"
            label="alfdemo: create document"
            enabled="true">
      </handler>
      <handler
            actionHandler="true"
            assignmentHandler="false"
            botTaskHandler="true"
            decisionHandler="false"
