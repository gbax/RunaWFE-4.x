            label="alfdemo: reject document"
            enabled="true">
      </handler>
   </extension>
   <extension
         point="ru.runa.gpd.form.ftl.tags">
      <tag
            id="GetMyDocStatus"
            name="Show status of document">
      </tag>
   </extension>

