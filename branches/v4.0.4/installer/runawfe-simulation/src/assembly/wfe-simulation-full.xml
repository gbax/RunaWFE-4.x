<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">

	<id>server-full-${version}</id>

	<formats>
		<format>zip</format>
	</formats>

	<includeBaseDirectory>false</includeBaseDirectory>

	<fileSets>
		<fileSet>
			<directory>target/jboss4</directory>
			<outputDirectory>jboss</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}/runawfe</directory>
			<outputDirectory>/server/default/deploy/runawfe.ear</outputDirectory>
		</fileSet>
	</fileSets>
</assembly>
