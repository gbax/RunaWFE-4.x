<?xml version="1.0" encoding="UTF-8"?>
<process-definition name="TextFileCreation" xmlns="urn:jbpm.org:jpdl-3.2">
  <description><![CDATA[Bot creates text file (no start form provided)]]></description>
  <swimlane name="bot">
    <assignment
      class="ru.runa.wf.jbpm.delegation.assignment.AssignmentHandler" config-type="configuration-property"><![CDATA[ru.runa.af.organizationfunction.ExecutorByNameFunction(UniversalBot)]]></assignment>
  </swimlane>
  <swimlane name="user">
    <assignment
      class="ru.runa.wf.jbpm.delegation.assignment.AssignmentHandler" config-type="configuration-property"><![CDATA[]]></assignment>
  </swimlane>
  <start-state name="enter data">
    <task name="enter data" swimlane="user"/>
    <transition name="tr1" to="create text file"/>
  </start-state>
  <task-node name="read of save file">
    <description><![CDATA[File is ready]]></description>
    <task name="read of save file" swimlane="user"/>
    <transition name="tr1" to="end"/>
  </task-node>
  <task-node name="create text file">
    <description><![CDATA[bot creates test file]]></description>
    <task name="create text file" swimlane="bot">
      <event type="task-create">
        <action
          class="ru.runa.wf.jbpm.delegation.action.BotInvokerActionHandler" config-type="configuration-property"><![CDATA[]]></action>
      </event>
    </task>
    <transition name="tr1" to="read of save file"/>
  </task-node>
  <end-state name="end"/>
</process-definition>
