<?xml version="1.0" encoding="UTF-8"?>
<process-definition name="BPMNdemo" xmlns="urn:jbpm.org:jpdl-3.2">
  <description><![CDATA[BPMN demo process]]></description>
  <swimlane name="requester">
    <assignment
      class="ru.runa.wf.jbpm.delegation.assignment.AssignmentHandler" config-type="configuration-property"><![CDATA[]]></assignment>
  </swimlane>
  <start-state name="Request">
    <description><![CDATA[Request]]></description>
    <task name="Request" swimlane="requester"/>
    <transition name="tr1" to="Evaluate"/>
  </start-state>
  <decision name="Is approved?">
    <handler
      class="ru.runa.wf.jbpm.delegation.decision.BSFDecisionHandler" config-type="configuration-property"><![CDATA[if ( evaluateResult.booleanValue() == false ) {
	return "rejected";
}

return "approved";
]]></handler>
    <transition name="approved" to="Keep informed"/>
    <transition name="rejected" to="Notify of rejection"/>
  </decision>
  <task-node name="Evaluate">
    <description><![CDATA[Evaluate a  request]]></description>
    <task name="Evaluate" swimlane="requester"/>
    <transition name="tr1" to="Is approved?"/>
  </task-node>
  <task-node name="Keep informed">
    <description><![CDATA[Keep informed]]></description>
    <task name="Keep informed" swimlane="requester"/>
    <transition name="tr1" to="fork"/>
  </task-node>
  <task-node name="Notify of rejection">
    <description><![CDATA[The request is rejected]]></description>
    <task name="Notify of rejection" swimlane="requester"/>
    <transition name="tr1" to="end"/>
  </task-node>
  <task-node name="Submit">
    <description><![CDATA[Submit]]></description>
    <task name="Submit" swimlane="requester"/>
    <transition name="tr1" to="join"/>
  </task-node>
  <task-node name="Receive">
    <description><![CDATA[Receive]]></description>
    <task name="Receive" swimlane="requester"/>
    <transition name="tr1" to="join"/>
  </task-node>
  <task-node name="Notify of approval">
    <description><![CDATA[Make an official order for vacation]]></description>
    <task name="Notify of approval" swimlane="requester"/>
    <transition name="tr1" to="end"/>
  </task-node>
  <fork name="fork">
    <transition name="tr1" to="Submit"/>
    <transition name="tr2" to="Receive"/>
  </fork>
  <join name="join">
    <transition name="tr1" to="Notify of approval"/>
  </join>
  <end-state name="end"/>
</process-definition>
