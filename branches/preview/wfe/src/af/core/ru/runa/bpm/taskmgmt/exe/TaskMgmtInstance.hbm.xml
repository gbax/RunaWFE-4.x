<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping auto-import="false" default-access="field" >

  <subclass name="ru.runa.bpm.taskmgmt.exe.TaskMgmtInstance" 
            extends="ru.runa.bpm.module.exe.ModuleInstance" 
            discriminator-value="T">
    <map name="swimlaneInstances" cascade="all" inverse="true">
      <!-- add on-delete for optimized deletion 
      <key column="TASKMGMTINSTANCE_" on-delete="cascade" />
      -->
      <key column="TASKMGMTINSTANCE_" />
      <index column="NAME_" type="string" />
      <one-to-many class="ru.runa.bpm.taskmgmt.exe.SwimlaneInstance" />
    </map>
    <set name="taskInstances" cascade="all" inverse="true">
      <!-- add on-delete for optimized deletion 
      <key column="TASKMGMTINSTANCE_" on-delete="cascade" />
      -->
      <key column="TASKMGMTINSTANCE_" />
      <one-to-many class="ru.runa.bpm.taskmgmt.exe.TaskInstance" />
    </set>
  </subclass>

</hibernate-mapping>
