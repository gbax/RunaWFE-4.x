<table cellspacing="0">
  <tr>
    <td valign="top">

      <table cellspacing="0" bgcolor="#eeeeee" style="border-style:solid;border-width:1px;border-color:black;">

  <tr>
    <th nowrap="true" colspan="2">
      <h3>Evaluate pay raise form</h3>
      <hr>
    </td>
  </tr>

  <tr title="the basterd that dared to ask for a pay raise">
    <td nowrap="true" align="right">
      Requesting employee:
    </td>
    <td nowrap="true" >
      <customtag var="actor" delegation="ru.runa.wf.web.html.ActorFullNameDisplayVarTag" />
    </td>
  </tr>

  <tr title="reason why the basterd thinks to earn the payraise">
    <td nowrap="true" align="right">
      Reason:
    </td>
    <td nowrap="true">
      <customtag var="reason" delegation="ru.runa.wf.web.html.VariableValueDisplayVarTag" />
    </td>
  </tr>

  <tr title="the amount asked">
    <td nowrap="true" align="right">
      Amount asked:
    </td>
    <td nowrap="true">
      <customtag var="amount.asked" delegation="ru.runa.wf.web.html.VariableValueDisplayVarTag" />
    </td>
  </tr>

  <tr title="time">
    <td nowrap="true" align="right">
      When :
    </td>
    <td nowrap="true">
      <customtag var="time" delegation="ru.runa.wf.web.html.TimeValueDisplayVarTag" />
    </td>
  </tr>

  <tr title="the amount granted">
    <td nowrap="true" align="right">
      Amount granted:
    </td>
    <td nowrap="true">
      <input type="text" name="amount.granted" value="<customtag var="amount.asked" delegation="ru.runa.wf.web.html.VariableValueDisplayVarTag" />" />
    </td>
  </tr>

  <tr>
    <td nowrap="true" align="right" colspan="2">
    <hr>
    <input type="radio" name="approved" value="true" checked/> Approved
    <input type="radio" name="approved" value="false"/> Disapproved
  </tr>

      </table>

    </td>
    
  </tr>
</table>
