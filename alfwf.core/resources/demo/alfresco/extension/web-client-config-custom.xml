<alfresco-config>

	<config evaluator="string-compare" condition="Languages" replace="true">
		<languages>
			<language locale="en_EN">English</language>
			<language locale="ru_RU">Русский</language>
		</languages>
	</config>

	<config evaluator="string-compare" condition="Content Wizards">
		<content-types>
			<type name="demo:mydoc" />
		</content-types>
	</config>

	<config evaluator="node-type" condition="demo:mydoc">
		<property-sheet>
			<separator name="sep0" display-label="Custom data" component-generator="HeaderSeparatorGenerator" />
			<show-property name="demo:mydocstatus" read-only="true" />
		</property-sheet>
	</config>

</alfresco-config>